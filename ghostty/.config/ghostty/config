# Clear all keybindings first to avoid conflicts with zellij
keybind = clear
keybind = ctrl+shift+r=reload_config

# Disable tabs completely since we're using zellij
macos-titlebar-style = hidden
gtk-tabs-location = hidden
window-decoration = false

# Disable window state saving since zellij manages sessions
window-save-state = never

# Disable confirmation when closing windows (zellij handles this)
confirm-close-surface = false

# Quit when last window is closed since zellij manages sessions
quit-after-last-window-closed = true

# UI
theme = dark:OneHalfDark,light:OneHalfLight
font-family = "Aporetic Sans Mono"

shell-integration = fish

config-file = ?font-size.conf
